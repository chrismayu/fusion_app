<%= simple_form_for @course, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :title %>
  <%= f.input :description %>
  <%= f.input :length %>
  <%= f.input :instructor_first_name %>
  <%= f.input :instructor_last_name %>
  <div class="form-actions">
    <%= f.button :submit, "Update Program", :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                courses_path, :class => 'btn' %>
  </div>
<% end %>
